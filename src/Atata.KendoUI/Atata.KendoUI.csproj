<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net40;net45;net46;netstandard2.0</TargetFrameworks>
    <Version>1.4.0</Version>
    <Authors>Yevgeniy Shunevych</Authors>
    <Company>Yevgeniy Shunevych</Company>
    <Product>Atata Framework</Product>
    <Description>C#/.NET package containing a set of Atata components for automated web testing integration with Kendo UI HTML Framework.

Works with Kendo UI components for jQuery, Angular, React, Vue, ASP.NET MVC and ASP.NET Core.

Supports .NET Framework 4.0+ and .NET Core/Standard 2.0+.

Atata.KendoUI on GitHub: https://github.com/atata-framework/atata-kendoui
Atata Framework documentation: https://atata.io</Description>
    <Copyright>© Yevgeniy Shunevych 2020</Copyright>
    <PackageId>Atata.KendoUI</PackageId>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/atata-framework/atata-kendoui</PackageProjectUrl>
    <PackageIcon>icon.png</PackageIcon>
    <PackageTags>atata automation testing test selenium webdriver browser kendo kendoui</PackageTags>
    <PackageReleaseNotes>1.4.0 - https://atata.io/blog/2020/12/30/atata.kendoui-1.4.0-released/
1.3.0 - https://atata.io/blog/2020/05/14/atata.kendoui-1.3.0-released/
1.2.0 - https://atata.io/blog/2019/12/05/atata.kendoui-1.2.0-released/
1.1.0 - https://atata.io/blog/2019/09/12/atata.kendoui-1.1.0-released/</PackageReleaseNotes>
    <CodeAnalysisRuleSet>..\..\Atata.ruleset</CodeAnalysisRuleSet>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RepositoryUrl>https://github.com/atata-framework/atata-kendoui</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Atata" Version="1.9.0" />
    <PackageReference Include="Atata.WebDriverExtras" Version="1.4.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="3.3.0" PrivateAssets="All" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
    <PackageReference Include="Selenium.WebDriver" Version="3.141.0" />
    <PackageReference Include="SonarAnalyzer.CSharp" Version="8.16.0.25740" PrivateAssets="All" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.118" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <None Include="icon.png" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
