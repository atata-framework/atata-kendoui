@using Microsoft.Extensions.Primitives
@{
    StringValues versionValues = Context.Request.Query["v"];
    string? kendoUIVersion = versionValues == StringValues.Empty
        ? "2022.3.1109"
        : versionValues[0];
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Atata.KendoUI</title>

    <link href="http://kendo.cdn.telerik.com/@kendoUIVersion/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="http://kendo.cdn.telerik.com/@kendoUIVersion/styles/kendo.default.min.css" rel="stylesheet" />
    <link href="http://kendo.cdn.telerik.com/@kendoUIVersion/styles/kendo.default.mobile.min.css" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="http://kendo.cdn.telerik.com/@kendoUIVersion/js/kendo.all.min.js"></script>
</head>
<body>
    <div class="container body-content">
        <h1>@ViewBag.Title</h1>
        @RenderBody()
    </div>
</body>
</html>
